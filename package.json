{
  "name": "fullstack-app",
  "version": "1.0.0",
  "description": "Full stack Node.js/Fastify + React/Vite application",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "start": "npm start --workspace=server",
    "prod": "NODE_ENV=production npm start --workspace=server",
    "install:all": "npm install && npm install --workspace=server && npm install --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}